<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:SheetAtlas.UI.Avalonia.Converters"
             x:Class="SheetAtlas.UI.Avalonia.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://SheetAtlas.UI.Avalonia/Styles/Themes/ThemeResources.axaml"/>
                <ResourceInclude Source="avares://SheetAtlas.UI.Avalonia/Styles/Icons.axaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <converters:ComparisonTypeToBackgroundConverter x:Key="ComparisonTypeToBackgroundConverter"/>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://SheetAtlas.UI.Avalonia/Styles/Buttons.axaml"/>
        <StyleInclude Source="avares://SheetAtlas.UI.Avalonia/Styles/Menus.axaml"/>
        <StyleInclude Source="avares://SheetAtlas.UI.Avalonia/Controls/CollapsibleSection.axaml"/>
    </Application.Styles>
</Application>
