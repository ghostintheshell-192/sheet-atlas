#!/bin/bash
# Git Pre-commit Hook - Orchestrator
# Executes all hooks in pre-commit.d/ directory in numeric order
# Created: 2025-10-10
# Location: /data/repos/.git-hooks/pre-commit

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Get the directory where this script is located
HOOK_DIR="$(dirname "$0")/pre-commit.d"

echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${BLUE}  Pre-Commit Checks${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""

# Check if pre-commit.d directory exists
if [ ! -d "$HOOK_DIR" ]; then
    echo -e "${YELLOW}⚠ WARNING:${NC} No pre-commit.d/ directory found"
    exit 0
fi

# Run all executable hooks in order
FAILED=0
for hook in "$HOOK_DIR"/*; do
    if [ -f "$hook" ] && [ -x "$hook" ]; then
        MODULE_NAME=$(basename "$hook")

        # Execute the hook module
        "$hook"
        EXIT_CODE=$?

        if [ $EXIT_CODE -ne 0 ]; then
            FAILED=1
            # Don't exit immediately - let user see all failed checks
        fi
    fi
done

echo ""
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# Final result
if [ $FAILED -eq 1 ]; then
    echo -e "${RED}✗ Pre-commit checks FAILED${NC}"
    echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo ""
    exit 1
else
    echo -e "${GREEN}✓ All pre-commit checks PASSED${NC}"
    echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
    echo ""
    exit 0
fi
