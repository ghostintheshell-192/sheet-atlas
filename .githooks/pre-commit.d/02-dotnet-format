#!/bin/bash
# Pre-commit Hook Module: C# Code Formatting
# Runs dotnet format only for .NET projects
# Created: 2025-10-10

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Check if this is a .NET project (look for .csproj or .sln files)
if ! ls *.csproj >/dev/null 2>&1 && ! ls *.sln >/dev/null 2>&1; then
    # Not a .NET project, skip this check
    exit 0
fi

echo -e "${GREEN}[C# Format Check]${NC} Running dotnet format..."

# Check if dotnet is installed
if ! command -v dotnet &> /dev/null; then
    echo -e "${YELLOW}⚠ WARNING:${NC} dotnet command not found - skipping format check"
    exit 0
fi

# Get list of staged .cs files
STAGED_CS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.cs$' || true)

# If no .cs files staged, skip check
if [ -z "$STAGED_CS_FILES" ]; then
    echo -e "${GREEN}✓ No C# files staged - skipping format check${NC}"
    exit 0
fi

# Run dotnet format only on staged files
# Note: dotnet format works on whole project, so we verify but only check staged files
dotnet format --verify-no-changes --verbosity quiet 2>&1 | tee /tmp/format-output.txt

# Capture exit code
FORMAT_EXIT_CODE=$?

# If format check failed, verify if errors are in staged files
if [ $FORMAT_EXIT_CODE -ne 0 ]; then
    # Check if any of the errors are in staged files
    ERRORS_IN_STAGED=0
    while IFS= read -r staged_file; do
        if grep -q "$staged_file" /tmp/format-output.txt 2>/dev/null; then
            ERRORS_IN_STAGED=1
            break
        fi
    done <<< "$STAGED_CS_FILES"

    # If errors are only in non-staged files, ignore them
    if [ $ERRORS_IN_STAGED -eq 0 ]; then
        echo -e "${GREEN}✓ C# code formatted correctly (staged files)${NC}"
        echo -e "${YELLOW}⚠ Note: Format issues exist in non-staged files${NC}"
        rm -f /tmp/format-output.txt
        exit 0
    fi

    # Errors in staged files - fail the commit
    FORMAT_EXIT_CODE=1
fi

rm -f /tmp/format-output.txt

if [ $FORMAT_EXIT_CODE -ne 0 ]; then
    echo ""
    echo -e "${RED}═══════════════════════════════════════════════${NC}"
    echo -e "${RED}  C# CODE NOT FORMATTED CORRECTLY!${NC}"
    echo -e "${RED}═══════════════════════════════════════════════${NC}"
    echo ""
    echo -e "${YELLOW}To fix:${NC}"
    echo "  1. Run 'dotnet format' to auto-fix formatting"
    echo "  2. Manually fix naming violations (IDE1006) if needed"
    echo "  3. Stage and commit again"
    echo ""
    echo -e "${YELLOW}To see details:${NC}"
    echo "  dotnet format --verify-no-changes"
    echo ""
    echo -e "${YELLOW}To bypass (NOT RECOMMENDED):${NC}"
    echo "  git commit --no-verify"
    echo ""
    exit 1
fi

echo -e "${GREEN}✓ C# code formatted correctly${NC}"
exit 0
