# Auto detect text files and perform LF normalization
* text=auto

# Source code - always LF in repo
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.axaml text eol=lf
*.xaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.props text eol=lf
*.targets text eol=lf

# Config files
*.config text eol=lf
*.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
nuget.config text eol=lf
global.json text eol=lf

# Scripts - platform specific
*.sh text eol=lf
*.bash text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Binary files - no conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.exe binary
*.dll binary
*.pdb binary
*.nupkg binary
